<div class="container">
  <div class="row">
    <div class="header">
      <h1>I'm the edit for profile</h1>
    </div>
    <div class="col-xs-12">
     <h3>Cancel my account</h3>


     <%= simple_form_for @user, url: profile_path(@user) do |f|%>
     <%= f.input :email %>
     <%= f.input :first_name %>
     <%= f.input :last_name %>
     <%= f.submit :submit, value: "Update my profile", class: "home-button-green" %>
     <% end %>
     <p>Unhappy? <%= link_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %></p>
     <%= link_to "Back", :back %>
   </div>
 </div>
</div>
