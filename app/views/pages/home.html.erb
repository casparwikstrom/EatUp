<div class="page-wrapper">
  <%= render 'shared/banner' %>
  <div class="container">
    <h3 class="padding-top" id="trending_popups" data-prev='#button1'>Explore # live projects</h3>
    <div class="cards-container padding-top" >
      <div class="row">
        <% @popups.each do |popup| %>

        <div class="col-xs-12 col-sm-6 col-lg-4 margin-bottom">
          <div class="card-container" id="popup-<%= popup.id %>">
            <%= link_to popup_path(popup), class: "card-link" do %>

            <div class="card-img" style="background-image: url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            </div>
            <div class="card-desc">
              <h4><%= popup.title %></h4>
              <% if popup.description %>
              <p class="description-text"><%= popup.description[0..100] + "..."%></p>
              <p> <img src='https://kitt.lewagon.com/placeholder/users/ssaunier' class="card-avatar"/> by <%= popup.user.first_name %></p>
              <% end %>
            </div>
            <div class="card-stats">
              <%= popup.amount_pledged %>
              <p>Amount: <%= humanized_money_with_symbol(popup.price) %></p>


              <% if current_user %>
              <%= link_to like_popup_path(popup), class: "like-btn", method: :put, remote: :true do %>
              <div>
                <span class="likes-count"> <%= popup.get_upvotes.size %></span>
                <span><i class="fa fa-thumbs-up fa-1x"></i></span>
              </div>
              <% end %>

              <% else %>
              <%= link_to new_user_session_path, class: "like-btn", method: :get do %>
              <div>
                <span class="likes-count"> <%= popup.get_upvotes.size %></span>
                <span><i class="fa fa-thumbs-up fa-1x "></i></span>

              </div>
              <% end %>
              <% end %>

              <!-- percentage funded -->
              <!-- days to go -->
            </div>
            <div class="wishlist">
              <%= simple_form_for([popup, @wishlist]) do |f|  %>
              <%= button_tag type: 'submit', class: "button postfix" do %>
              <i class="fa fa-heart" aria-hidden="true"></i>
              <% end %>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


















