
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="form">
        <form action="/pages" action="GET">
          <input type="text" name="address" id="search-open" placeholder="address">
         <input type="text" name="category" id="search-open" placeholder="Category">
         <input type="submit" value="Change city" class="btn btn-warning">
       </form>
     </div>

     <% if @popups %>
     <% @popups.each do |popup| %>
     <div class="small-card-container">
      <div class="col-xs-6 col-sm-6 col-sm-6">
       <div class="card-small" style="background-image: url('<%= !popup.photos.empty? ? cl_image_path(popup.photos.first.path, width: 350, height: 200, crop: :fill, class: "background-image") : "" ; %>')">
         <%= link_to popup.title, popup_path(popup), class: "card-link" %>
       </div>
       <div class="card-footer-small">
        <%= popup.address %>
      </div>
    </div>
  </div>
  <% end %>
  <% else %>
  <h3>Enter address and Category</h3>
  <% end %>
</div>



<div class="col-sm-6">
  <div id="map" style="width: 100%; height: 600px;"></div>
  <script>

    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
    <% end %>
    <% end %>
  </script>

</div>
</div>
</div>
