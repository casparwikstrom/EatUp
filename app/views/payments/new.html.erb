<div class="page-wrapper">
  <div class="container">
    <div class="padding-top margin-bottom">
      <div class="row">
        <div class="popup-title">
        <h1> <%= @order.popup.title %></h1>
        </div>
        <div class="chef-pic">
          <% if @order.popup.user.photo %>
          <p> <%= cl_image_tag @order.popup.user.photo.path, class: "header-avatar"%></p>
          <% end %>
          <p> by&nbsp;<strong><%= @order.popup.user.first_name %></strong> </p>
        </div>

      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 order-new-section">
    <h4><strong>Payment information</strong> </h4>
    <p>Your payment method will not be charged at this time. If the project is successfully funded, your payment method will be charged $5.00 when the project ends.</p>
    <br>
    <%= form_tag order_payments_path(@order) do %>
    <article>
      <label class="amount">
        <h4><span style="color:black">I pledge</span> <%= humanized_money_with_symbol(@order.amount) %></h4>
      </label>
    </article>
    <br>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Eatup"
    data-email="<%= current_user.email %>"
    data-description="popup <%= @order.popup.title %>"
    data-amount="<%= @order.amount_cents %>"
    data-currency="<%= @order.amount.currency %>"></script>

    <% end %>
  </div>
</div>
