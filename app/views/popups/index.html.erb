
<div class="page-wrapper">
  <div class="container">
    <div class="row popups">
      <div class="categories-explorer">
        <div class="col-xs-12">
          <h2 class= "text-center">What kind of food are you looking for?</h2>

          <div id="search-form-partial">
            <%= render "search_form" %>
          </div>

          <!-- Previous Search form -->
          <% form_tag popups_path, method: :get, id: "form", remote: true do %>
          <ul>
            <% Type.all.each do |type| %>
            <div id="type_checkbox">
             <li class="type_trigger">
              <%= check_box_tag "type_ids[]", type.id, false, class: "type_input hidden" %>
              <span><%= type.name %></span>
            </li>
          </div>
          <% end %>
        </ul>
        <% end %>
      </div>

      <div id="popup-results">
        <% if @popups.count == 0 %>
        <h3>No matches</h3>
        <% else %>
        <%= render "popups", popups: @popups %>
        <% end %>
      </div>

    </div>
  </div>
</div>


