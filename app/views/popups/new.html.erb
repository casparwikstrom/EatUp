<div class="page-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h1>Get Started</h1>
        <%= simple_form_for @popup do |f| %>
          <h3><%= f.input :title, placeholder: 'Cool name...' %></h3>
          <%#= f.select :type_ids, Type.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
          <%= f.association :types, :multiple => true, as: :check_boxes  %>
          <%= f.button :submit, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



